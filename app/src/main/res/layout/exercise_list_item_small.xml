<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/exercise_list_item_rectangle_small"
            android:layout_width="0dp"
            android:layout_height="55dp"


            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_corner_rectangle"
            android:backgroundTint="#FFC107"
            android:paddingTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/exercise_list_item_icon_small"
            android:layout_width="54dp"
            android:layout_height="55dp"
            android:src="@drawable/p_icon"
            app:layout_constraintBottom_toBottomOf="@+id/exercise_list_item_rectangle_small"
            app:layout_constraintStart_toStartOf="@+id/exercise_list_item_rectangle_small"
            app:layout_constraintTop_toTopOf="@+id/exercise_list_item_rectangle_small" />

        <TextView
            android:id="@+id/exercise_list_item_text_small"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:text="Benchpress"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/exercise_list_item_rectangle_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/exercise_list_item_rectangle_small"
            app:layout_constraintTop_toTopOf="@+id/exercise_list_item_rectangle_small" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>