<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/all_exercise_overview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercise.all_exercise_overview">

    <Button
        android:id="@+id/all_exercise_overview_arm_button"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#E5E5E5"
        android:text="Arm"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/all_exercise_overview_back_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_exercise_overview_search" />

    <Button
        android:id="@+id/all_exercise_overview_back_button"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#E5E5E5"
        android:text="Back"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/all_exercise_overview_chest_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/all_exercise_overview_arm_button"
        app:layout_constraintTop_toBottomOf="@+id/all_exercise_overview_search" />

    <Button
        android:id="@+id/all_exercise_overview_chest_button"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#E5E5E5"
        android:text="Chest"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/all_exercise_overview_back_button"
        app:layout_constraintTop_toBottomOf="@+id/all_exercise_overview_search" />

    <Button
        android:id="@+id/all_exercise_overview_core_button"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#E5E5E5"
        android:text="Core"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/all_exercise_overview_legs_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_exercise_overview_arm_button" />

    <Button
        android:id="@+id/all_exercise_overview_legs_button"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#E5E5E5"
        android:text="Legs"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/all_exercise_overview_shoulder_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/all_exercise_overview_core_button"
        app:layout_constraintTop_toBottomOf="@+id/all_exercise_overview_back_button" />

    <Button
        android:id="@+id/all_exercise_overview_shoulder_button"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#E5E5E5"
        android:text="Shoulder"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/all_exercise_overview_legs_button"
        app:layout_constraintTop_toBottomOf="@+id/all_exercise_overview_chest_button" />

    <ListView
        android:id="@+id/all_exercise_overview_list_view"
        android:layout_width="409dp"
        android:layout_height="560dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_exercise_overview_core_button" />

    <EditText
        android:id="@+id/all_exercise_overview_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Search Exercise"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/all_exercise_overview_chest_button"
        app:layout_constraintStart_toStartOf="@+id/all_exercise_overview_arm_button"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>